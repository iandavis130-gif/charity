<script>

/* Typing effect */
const message="My shosh, will you be my valentine? ğŸ’˜";
let i=0;
function type(){
if(i<message.length){
document.getElementById("text").innerHTML+=message[i];
i++;
setTimeout(type,50);
}
}
type();

/* Running No button */
const no=document.getElementById("no");
no.addEventListener("mouseover",move);
no.addEventListener("click",move);
no.addEventListener("touchstart",function(e){
e.preventDefault();
move();
},{passive:false});

function move(){
const card=document.querySelector(".card");
const maxX=card.offsetWidth-no.offsetWidth;
const maxY=card.offsetHeight-no.offsetHeight;

const randX=Math.random()*maxX;
const randY=Math.random()*maxY;

no.style.left=randX+"px";
no.style.top=randY+"px";
no.style.transform="none";
}

/* Yes button */
document.getElementById("yes").addEventListener("click",function(){

document.querySelector(".card").innerHTML=`
<h1 style="font-family:'Great Vibes',cursive;font-size:32px;">
